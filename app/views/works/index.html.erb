<h2>All Works</h2>

<section>
	<h3>Movies</h3>

	<table>
		<tr>
			<th>Votes</th>
			<th>Title</th>
			<th>Creator</th>
			<th>Publication Year</th>
			<th>Description</th>
			<th>Upvote</th>
		</tr>

			<% @movies.each do |movie| %>
				<tr>
					<td>
						<%= movie.votes.count %>
					</td>
					<td>
						<%= link_to movie.title, work_path(movie) %>
					</td>
					<td>
						<%= movie.creator %>
					</td>
					<td>
						<%= movie.publication_year %>
					</td>
					<td>
						<%= movie.description %>
					</td>
					<td>
						Upvote
					</td>
				</tr>

			<% end %>

	</table>
</section>

