<section>
	<h3><%= collection_name %></h3>

	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th>Votes</th>
				<th>Title</th>
				<th>Creator</th>
				<th>Publication Year</th>
				<th>Description</th>
				<th>Upvote</th>
			</tr>
			</thead>

			<% collection.each do |work| %>
				<tr>
					<td> 
						<%= work.votes.count %>
					</td>
					<td>
						<%= link_to work.title, work_path(work) %>
					</td>
					<td>
						<%= work.creator %>
					</td>
					<td>
						<%= work.publication_year %>
					</td>
					<td>
						<%= work.description %>
					</td>
					<td>
						<%= link_to "Upvote", work_votes_path(work), method: :post %>
					</td>
				</tr>
			<% end %>

	</table>
</section>