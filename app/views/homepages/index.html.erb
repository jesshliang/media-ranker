<section class="spotlight">
	<% if Work.top_media != nil %>
	<h2>
		Media Spotlight: <%= link_to Work.top_media.title %>
		by <%= Work.top_media.creator %>
	</h2>
	<p>
		<%= Work.top_media.description %>
	</p>
	<% else %>
	<h2>No medias added.</h2>
	<% end %>
</section>

<section class="top-ten__container">
	<section class="top-ten__list-container">
		<h2>Top Movies</h2>
		<ul class="list-group top-ten-__list">
			<% Work.top_movies.each do |work| %>
			<li class="list-group-item">
				<h4>
					<%= link_to work.title, work_path(work.id) %>
					<small class="top-ten__creator">by <%= work.creator %></small>
				</h4>
				<p><%= work.votes.count %> votes</p>
			</li>
			<% end %>
		</ul>
	</section>

	<section class="top-ten__list-container">
		<h2>Top Books</h2>
		<ul class="list-group top-ten-__list">
			<% Work.top_books.each do |work| %>
			<li class="list-group-item">
				<h4>
					<%= link_to work.title, work_path(work.id) %>
					<small class="top-ten__creator">by <%= work.creator %></small>
				</h4>
				<p><%= work.votes.count %> votes</p>
			</li>
			<% end %>
		</ul>
	</section>

	<section class="top-ten__list-container">
		<h2>Top Albums</h2>
		<ul class="list-group top-ten-__list">
			<% Work.top_albums.each do |work| %>
			<li class="list-group-item">
				<h4>
					<%= link_to work.title, work_path(work.id) %>
					<small class="top-ten__creator">by <%= work.creator %></small>
				</h4>
				<p><%= work.votes.count %> votes</p>
			</li>
			<% end %>
		</ul>
	</section>

</section>